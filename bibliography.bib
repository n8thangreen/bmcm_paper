month = {oct},
number = {1},
pages = {0272989X2211345},
title = {{Blended Survival Curves: A New Approach to Extrapolation for Time-to-Event Outcomes from Clinical Trials in Health Technology Assessment}},
url = {https://journals.sagepub.com/doi/10.1177/0272989X221134545 http://journals.sagepub.com/doi/10.1177/0272989X221134545},
